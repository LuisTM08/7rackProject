@model APP_ELTAMBO.Entity.Categoria

@{
    ViewBag.Title = "Editar Categoria";
}
<section id="categoria">
    <div class="col-md-3">
        @Html.Partial("_MenuAdmin")
    </div>
    <div class="col-md-9">
        <div class="page-header">
            <h2>Editar Categoria</h2>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <p>Ingrese los datos requeridos para actualizar la categoria</p>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreCat, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.IdCategoria)
                        @Html.EditorFor(model => model.NombreCat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreCat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Estado", (SelectList)ViewBag.listarEstado, "Seleccione Estado", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="@Url.Action("ListaCategorias","Manage")" class="btn btn-default">
                            <i class="fa fa-arrow-left" aria-hidden="true"></i> Regresar a lista
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i> Actualizar Categoria
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>



