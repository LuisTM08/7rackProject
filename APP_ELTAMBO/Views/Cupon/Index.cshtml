@model IEnumerable<APP_ELTAMBO.Entity.Cupon>

@{
    ViewBag.Title = "Lista de Cupones";
}
<section id="cupones">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_MenuAdmin")
        </div>
        <div class="col-md-9">
            <div class="page-header">
                <h2>Lista de Cupones</h2>
            </div>
            <p>
                <a href="@Url.Action("Create","Cupon")" class="btn btn-primary">
                    <i class="fa fa-plus" aria-hidden="true"></i> Agregar nuevo cupón
                </a>
            </p>
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCupon)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCupon)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoCupon)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Porcentaje)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Visibilidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>Acciones</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCupon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCupon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoCupon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Porcentaje)
                        </td>
                        <td>
                            @if (item.Visibilidad == 1)
                            {
                                <p>Ninguna</p>
                            }
                            else
                            {
                                <p>Publicada</p>
                            }
                        </td>
                        <td>
                            @if (item.Estado == 1)
                            {
                                <p>Activo</p>
                            }
                            else
                            {
                                <p>Inactivo</p>
                            }
                            
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Edit","Cupon", new {  id=item.IdCupon  })" class="btn btn-default">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                
                                <a href="@Url.Action("Delete","Cupon", new {  id=item.IdCupon  })" class="btn btn-default">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                </a>
                            </div>
                            
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>


